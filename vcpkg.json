{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "dependencies": [
    "boost-asio",
    "boost-iostreams",
    "boost-locale",
    "boost-lockfree",
    "boost-system",
    "boost-variant",
    "fmt",
    {
      "name": "libiconv",
      "platform": "osx"
    },
    "libmysql",
    "openssl",
    "pugixml",
    "zlib"
  ],
  "features": {
    "http": {
      "description": "Enable HTTP support",
      "dependencies": ["boost-beast", "boost-json"]
    },
    "lua": {
      "description": "Use Lua instead of LuaJIT",
      "dependencies": ["lua"]
    },
    "luajit": {
      "description": "Use LuaJIT instead of Lua",
      "dependencies": ["luajit"]
    },
    "unit-tests": {
      "description": "Build unit tests",
      "dependencies": ["boost-test"]
    }
  },
  "default-features": ["lua", "http"],
  "overrides": [
    { "name": "fmt", "version": "10.2.1#1" }
  ]
}
